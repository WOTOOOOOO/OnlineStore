@using someOnlineStore.Data.Static
@using someOnlineStore.Data.ViewModels
@model NewProductVM

@{
    ViewData["Title"] = "Create new product";
}

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="row">
    <div class="col-md-12">
        <p class="text-center">Update Product</p>
    </div>
    <div class="row">
        <div class="col-md-8 offset-2">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-md-6 h-25">
                        <div class="row">
                            <div class="col-md-auto">
                                <label asp-for="image" class="control-label"></label>
                            </div>
                            <div class="custom-file col-md-auto">
                                <input asp-for="image" class="visually-hidden" id="customFile" accept="image/*" type="file">
                                <label for="customFile" class="btn btn-primary mb-1">Select file</label>
                            </div>
                            <div id="preview">
                            </div>
                        </div>
                        <span asp-validation-for="image" class="text-danger"></span>
                    </div>
                    <div class="col-md-5 offset-1">
                        <div class="form-group">
                            <label asp-for="ProductName" class="form-label"></label>
                            <input asp-for="ProductName" class="form-control"/>
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="price" class="form-label"></label>
                            <input asp-for="price" class="form-control"/>
                            <span asp-validation-for="price" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ProductDescription" class="form-label"></label>
                    <input asp-for="ProductDescription" class="form-control"/>
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>
                @foreach (var category in SupportedCategories.Categories)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               onclick="updateCategory()" value=@((int) category)>
                        <label class="form-check-label" for="formRadioDefault">@category</label>
                    </div>
                }
                <div class="form-group visually-hidden">
                    <input asp-for="Categories" class="form-control" id="category"/>
                    <span asp-validation-for="Categories" class="text-danger"></span>
                </div>

                <div class="form-group float-end">
                    <input type="submit" value="Create" class="btn btn-outline-success float-right"/>
                    <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>