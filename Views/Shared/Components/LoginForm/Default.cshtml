@using someOnlineStore.Data.ViewModels;
@model LoginVM;

<div class="col-md-6 offset-3">
    <p>
        <h4>Log in to your account</h4>
    </p>

    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"] </span>
        </div>
    }

    <div class="row">
        <div class="col-md-8 offset-2">
            <form id="loginForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Passsword" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button class="btn btn-outline-success float-right" type="button" onclick="loginSubmit()">Login in</button>
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>