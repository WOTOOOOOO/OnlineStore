@using someOnlineStore.Data.ViewModels;
@model PasswordChangeFormVM;

@if (TempData["Error"] != null)
{
    <div class="col-md-6 offset-3 alert alert-danger">
        <span><b>Sorry!</b> - @TempData["Error"] </span>
    </div>
}


<div class="card col-md-4 offset-4">
    @if (TempData["Error"] != null)
    {
        <span class="text-danger">@TempData["ErrorMessage"]</span>
    }
    <div id="passwordChangeForm">
        <div class="form-group">
            <label asp-for="newPassword" class="form-label"></label>
            <input type="password" asp-for="newPassword" class="form-control" id="newPassword"/>
            <span asp-validation-for="newPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="confirmPassword" class="form-label"></label>
            <input type="password" asp-for="confirmPassword" class="form-control" id="confirmPassword"/>
            <span asp-validation-for="confirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group float-end">
            <button class="btn btn-outline-success float-right" type="button"
                    onclick="passwordChangeSubmit(@($"\"{Model.Id}\""),@($"\"{Model.token}\""))">
                Update
            </button>
            <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Home">Cancel</a>
        </div>
    </div>
</div>
