@model string

<div>
    <div class="form-group">
        <label class="form-label">Enter new Email</label>
        <input class="form-control" name="newEmail" id="newEmail" />
        @if (TempData["Error"] != null)
        {
            <span class="text-danger">@TempData["Error"]</span>
        }
    </div> 
    <div class="form-group float-end">
        <button class="btn btn-outline-success float-right" onclick="emailChangeSubmit(@($"\"{Model}\""))">Update</button>
        <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Home">Cancel</a>
    </div>
</div>